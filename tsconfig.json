{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "packages/*": [
                "./packages/*"
            ]
        }
    },
    "include": [
        "*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "packages/**/*.ts",
        "packages/**/*.d.ts",
        "packages/**/*.vue"
    ]
}